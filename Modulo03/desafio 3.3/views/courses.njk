{% extends "layout.njk" %}

{% block content %}

    
    <section class="cards">

        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        
        {% for item in items %}
        <div class="card" id="{{item.id}}">
            <div class="card_image">
                <img src="{{item.cardImage}}" alt="imagem {{item.title}}">
            </div>
            <div class="card_info">
                <p>{{item.title}}</p>
            </div>
        </div>
        
        {% endfor %}
       
    </section>


 <script src="/scripts.js"></script>    
    
    
{% endblock %}